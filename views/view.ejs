<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') %>
  <body>
    <div class="view-container">
      <div class="todo-item">
        <h1><%= todo.todo %></h1>
        <p>
          <strong>Description:</strong>
          <%= todo.description || 'No description provided.' %>
        </p>
        <p>
          <strong>Status:</strong>
          <%= todo.isDone ? '‚úÖ Completed' : 'üïí In Progress' %>
        </p>

        <div class="buttons">
          <% if (!todo.isDone) { %>
          <a href="/todo/<%= todo._id %>/edit" class="btn">‚úèÔ∏è Edit</a>
          <% } else { %>
          <p><em>This task is completed and cannot be edited.</em></p>
          <% } %>
          <a href="/todo" class="btn" style="background-color: #007bff">Home</a>
        </div>
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
