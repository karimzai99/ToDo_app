<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') %>
  <body>
    <div class="view-container">
      <h1><%= list.toDo %></h1>
      <p>
        <strong>Description:</strong>
        <%= list.description || 'No description provided.' %>
      </p>
      <p>
        <strong>Status:</strong>
        <%= list.isDone ? '✅ Completed' : '🕒 InProgress' %>
      </p>

      <div class="buttons">
        <% if (!list.isDone) { %>
        <a href="/todo/<%= parm %>/edit" class="btn">✏️ Edit</a>
        <% } else { %>
        <p><em>This task is completed and cannot be edited.</em></p>
        <% } %>
        <a href="/todo" class="btn" style="background-color: #007bff">Home</a>
      </div>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
