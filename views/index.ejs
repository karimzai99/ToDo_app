<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>
  <body>
    <h1>📝 My To-Do List</h1>

    <div class="center">
      <a href="/todo/new" class="btn">➕ Create New Task</a>
    </div>

    <div class="todo-list">
      <ol>
        <% lists.forEach((el, ind) => { %>
        <li>
          <div class="task-text">
            <a
              href="/todo/<%= ind %>"
              class="<%= el.isDone ? 'completed' : '' %>"
              ><%= el.toDo %></a
            >
          </div>

          <div class="todo-buttons">
            <form action="/todo/<%= ind %>?_method=PUT" method="POST">
              <input
                type="submit"
                value="<%= el.isDone ? 'Undone' : 'Done' %>"
                style="<%= el.isDone ? 'background-color: #888' : '' %>"
              />
            </form>

            <form action="/todo/<%= ind %>?_method=DELETE" method="POST">
              <input type="submit" value="DELETE" />
            </form>
          </div>
        </li>
        <% }) %>
      </ol>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
