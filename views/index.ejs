<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>index</title>
  </head>
  <body>
    <h1>To Do List</h1>

    <ol>
      <% lists.forEach((el, ind) => { %>
      <li><a href="/todo/<%= ind %>"><%= el.toDo %> </a></li>
      <form action="/todo/<%= ind %>?_method=DELETE" method="POST">
        <input type="submit" value="Done" />
      </form>
      <%})%>
    </ol>

    <a href="/todo/new"> create new List </a>
  </body>
</html>
